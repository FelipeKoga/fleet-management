<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/contactsFragment">

    <fragment
        android:id="@+id/contactsFragment"
        android:name="co.tcc.koga.android.ui.contacts.ContactsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/contacts_fragment" >
        <action
            android:id="@+id/action_nav_contacts_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_searchContactsFragment"
            app:destination="@id/searchContactsFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_newGroupFragment"
            app:destination="@id/newGroupFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="co.tcc.koga.android.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/profile_fragment" >
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="co.tcc.koga.android.ui.chat.ChatFragment"
        android:label="chat_fragment"
        tools:layout="@layout/chat_fragment" />
    <fragment
        android:id="@+id/searchContactsFragment"
        android:name="co.tcc.koga.android.ui.contacts.SearchContactsFragment"
        android:label="SearchContactsFragment" >
        <action
            android:id="@+id/action_searchContactsFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="co.tcc.koga.android.ui.settings.SettingsFragment"
        android:label="SettingsFragment" >
    </fragment>
    <fragment
        android:id="@+id/newGroupFragment"
        android:name="co.tcc.koga.android.ui.group.NewGroupFragment"
        android:label="NewGroupFragment" >
        <action
            android:id="@+id/action_newGroupFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
</navigation>